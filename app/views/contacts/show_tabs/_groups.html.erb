<%= turbo_frame_tag "contact_groups" do %>
  <h3> l(:label_groups_title) </h3>
  <% if @contact_groups.present? %>
    <ul class="contact-groups">
      <% @contact_groups.each do |group| %>
        <li><%= link_to group.name, contact_group_path(group) %></li>
      <% end %>
    </ul>
  <% else %>
    <%= render partial: 'common/empty_state', locals: { message: l(:label_contact_not_in_groups) } %>
  <% end %>
<% end %>
